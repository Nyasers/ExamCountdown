{
    "type": "object",
    "title": "Config Editor: 修改后请保存",
    "description": "按钮位于页面底部，保存后关闭窗口生效",
    "properties": {
        "interval": {
            "type": "integer",
            "title": "刷新间隔",
            "description": "更新数据的间隔时间 (单位ms)",
            "default": 1e2,
            "minimum": 5e1,
            "maximum": 1e3,
            "multipleOf": 5e1
        },
        "breakon": {
            "type": "string",
            "title": "截止考试",
            "description": "将标题中包含此关键词的作为最后一个考试 (按开始时间排序)",
            "default": "高考"
        },
        "finalonly": {
            "type": "boolean",
            "title": "只看截止",
            "description": "只显示最后一个考试",
            "default": false
        },
        "autostart": {
            "type": "boolean",
            "title": "开机自启",
            "description": "当前用户登录后自动启动程序",
            "default": true
        },
        "fontcolor": {
            "type": "string",
            "title": "字体颜色",
            "description": "若需自定义，请关闭自动",
            "format": "color",
            "default": "#000000"
        },
        "autocolor": {
            "type": "boolean",
            "title": "自动择色",
            "description": "非黑即白，还不太聪明",
            "default": true
        },
        "hitokoto": {
            "type": "boolean",
            "title": "显示一言",
            "description": "接口文档: https://developer.hitokoto.cn/sentence/",
            "default": true
        },
        "hitokoto_types": {
            "type": "array",
            "title": "一言类型",
            "description": "可多选，不选相当于全选。",
            "uniqueItems": true,
            "default": [],
            "items": {
                "type": "string",
                "enum": [
                    "a",
                    "b",
                    "c",
                    "d",
                    "e",
                    "f",
                    "g",
                    "h",
                    "i",
                    "j",
                    "k",
                    "l"
                ],
                "enumNames": [
                    "动画",
                    "漫画",
                    "游戏",
                    "文学",
                    "原创",
                    "来自网络",
                    "其他",
                    "影视",
                    "诗词",
                    "网易云",
                    "哲学",
                    "抖机灵"
                ]
            },
            "ui:widget": "SelectWidget",
            "ui:hidden": "{{rootFormData.hitokoto === false}}"
        },
        "bingwallpaper": {
            "type": "boolean",
            "title": "必应壁纸",
            "description": "获取必应壁纸作为背景图片<br>默认背景图片为系统桌面背景",
            "default": true
        },
        "exams": {
            "type": "array",
            "title": "考试列表",
            "default": [
                {
                    "title": "福建高考",
                    "top": false,
                    "time": {
                        "start": "2024-06-07T09:00:00+08:00",
                        "end": "2024-06-09T18:15:00+08:00",
                        "autoyear": true
                    }
                }
            ],
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "title": "标题",
                        "description": "可使用 YYYY 替代年份"
                    },
                    "top": {
                        "type": "boolean",
                        "title": "置顶",
                        "default": false
                    },
                    "time": {
                        "type": "object",
                        "title": "时间",
                        "properties": {
                            "start": {
                                "type": "string",
                                "title": "开始时间",
                                "format": "date-time"
                            },
                            "end": {
                                "type": "string",
                                "title": "结束时间",
                                "format": "date-time"
                            },
                            "autoyear": {
                                "type": "boolean",
                                "title": "自动年份",
                                "default": false
                            }
                        },
                        "required": [
                            "start",
                            "end"
                        ]
                    }
                },
                "required": [
                    "title",
                    "time"
                ]
            },
            "minItems": 1
        },
        "text": {
            "type": "object",
            "title": "文本模板",
            "description": "可使用 HTML 标签<br>其中 {N} 为占位符，会替换为相应内容",
            "default": {
                "start": "距离 {0} <strong>仅剩</strong>",
                "ending": "距离 {0} 结束还有",
                "time": "{0} ~ {1} 天 ~ {2} 小时 ~ {3} 秒"
            },
            "properties": {
                "start": {
                    "type": "string",
                    "title": "试前文本",
                    "description": "在考试开始前显示<br>其中 {0} 为考试标题"
                },
                "ending": {
                    "type": "string",
                    "title": "试中文本",
                    "description": "在考试结束前显示<br>其中 {0} 为考试标题"
                },
                "time": {
                    "type": "string",
                    "title": "时间文本",
                    "description": "展示考试时间<br>其中 {0} 为前两项的文本，{1} 为天数，{2} 为小时数，{3} 为秒数"
                }
            },
            "required": [
                "start",
                "ending",
                "time"
            ]
        },
        "precision": {
            "type": "object",
            "title": "时间精度",
            "description": "小数点后位数",
            "default": {
                "day": 3,
                "hour": 2,
                "second": 1
            },
            "properties": {
                "day": {
                    "type": "integer",
                    "title": "天",
                    "minimum": 0,
                    "maximum": 46
                },
                "hour": {
                    "type": "integer",
                    "title": "小时",
                    "minimum": 0,
                    "maximum": 41
                },
                "second": {
                    "type": "integer",
                    "title": "秒",
                    "minimum": 0,
                    "maximum": 29
                }
            }
        }
    }
}